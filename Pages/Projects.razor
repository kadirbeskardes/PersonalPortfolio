@page "/projects"
@using Personal.Models
@using Personal.Services
@inject ProjectService ProjectService

<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="section-title d-inline-block">Projelerim</h2>
        <p class="text-muted">Tamamladığım ve üzerinde çalıştığım projeler</p>
    </div>

    @if (projects == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Projeler yükleniyor...</p>
        </div>
    }
    else if (!projects.Any())
    {
        <div class="alert alert-warning text-center">
            Gösterilecek proje bulunamadı.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var project in projects)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm">
                        <div class="position-relative">
                            <img src="@project.ImageUrl" class="card-img-top" alt="@project.Title">
                            <div class="badge bg-primary position-absolute top-0 end-0 m-2">
                                @project.CreatedDate.ToString("yyyy")
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@project.Title</h5>
                            <p class="card-text">@project.ShortDescription</p>
                            <div class="mb-3">
                                @foreach (var tech in project.Technologies.Take(3))
                                {
                                    <span class="badge bg-secondary me-1 mb-1">@tech</span>
                                }
                                @if (project.Technologies.Length > 3)
                                {
                                    <span class="badge bg-light text-dark me-1 mb-1">+@(project.Technologies.Length - 3)</span>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="@($"project/{project.Id}")" class="btn btn-primary w-100">
                                <i class="bi bi-eye me-1"></i>Detayları Gör
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<ProjectListing>? projects;

    protected override async Task OnInitializedAsync()
    {
        projects = await ProjectService.GetProjectListingsAsync();
    }
}